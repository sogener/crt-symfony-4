{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .pizzas ul {
        display: flex;
        flex-wrap: wrap;
        padding-left: 0;
    }

    .pizzas ul li {
        list-style: none;
        flex: 0 0 33.333333%;
    }
    .pizzas ul li img {
        width: 200px;
        height: 200px;
    }
    .pizzas ul a {
        text-decoration: none;
        color: unset;
    }
</style>

<div class="example-wrapper">
    <div class="pizzas">
        <ul>
            {% for pizza in pizzas %}
                <li>
                    <a href="detail/{{ pizza.id }}">
                        <img src="{{ asset('/uploads/images/pizza/') ~ pizza.imageName}}" alt="img-pizza">
                        <h4>{{ pizza.title }}</h4>
                        <p>{{ pizza.description | raw }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
