{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="detail">
        <h2>Название пиццы: {{ pizza.title }}</h2>
        <img src="{{ asset('/uploads/images/pizza/') ~ pizza.imageName}}" alt="img-pizza">
        <h3>Описание пиццы:</h3>
        {{ pizza.description | raw }}
<!--        Ингридиенты-->
        <div class="detail__ingredients">
            <h3>Ингредиенты:</h3>
            <ul>
                {% for ingredient in ingredients %}
                    <li>{{ ingredient }}</li>
                {% endfor %}
            </ul>
        </div>
<!--        Кнопка добавление заказа-->
        {{ form_start(form, {'attr': {'class': 'mt-4 p-4 bg-light'}}) }}
        <div class="form-group">
            {{ form_label(form.quantity) }}
            {{ form_widget(form.quantity, {
                'attr': {
                    'class': 'form-control ' ~ (form.quantity.vars.valid ? '' : 'is-invalid')
                }
            }) }}
            <div class="invalid-feedback">
                {{ form_errors(form.quantity) }}
            </div>
        </div>
        {{ form_widget(form.add, {'attr': {'class': 'btn btn-warning w-25'}}) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
